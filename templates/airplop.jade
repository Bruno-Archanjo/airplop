doctype html
html(lang="en")
  head
    title AirPlop
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/airplop.css')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body

    div(class="container")

      div(class="page-header")
        h1 AirPlop
        p #{localURL}
      each file, i in files
        div(class="row")
          div(class="col-xs-9 col-md-6 filename")
            span #{file}
          div(class="col-xs-1")
            a(class="btn btn-default files glyphicon glyphicon-download", role="button", href='/download/'+i)
      
